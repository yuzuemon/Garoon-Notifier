{
  "name": "Garoon Notifier",
  "manifest_version": 2,
  "version": "2.0",
  "description": "Browser Extension for Garoon ver 2.5.2",
  "icons": {
    "64": "./images/logo64.png",
    "128": "./images/logo128.png"
  },
  "content_scripts" : [{
    "js": ["./background/background.js"],
    "matches": ["http://portal/cgi-bin/cbgrn/grn.cgi/schedule/view*"]
  }],
  "background": {
    "scripts": ["./background/common.js", "./background/background.js"],
    "persistent": false
  },
  "options_page": "./background/option.html",
  "browser_action": {
    "default_title": "Garoon Notifier",
    "default_icon": "./images/logo128.png",
    "default_popup": "./background/popup.html"
  },
  "permissions": ["http://portal/", "notifications"]
}
